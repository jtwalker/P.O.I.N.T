<div class = "add_comment">
	<% if current_user %>
		<h2>Add a comment:</h2>

		<%= form_for([@poi, @poi.comments.build]) do |f| %>
			<p>
				<%= f.label :body %><br />
				<%= f.text_area :body %>
			</p>

			<%= f.hidden_field :user_id, :value => current_user.id %> 

			<p>
				<%= f.submit %>
			</p>
		<% end %>

	<% end %>
</div>

<% if @poi.comments.count > 0 %>
	<table class="table table-striped">
	  <h2>Comments</h2>
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Comment</th>
	      <th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @poi.comments.each do |comment| %>
			    <tr>
			    	<td><%= get_user(comment.user_id).name %></td>
			      	<td><%= comment.body %></td>
			      	<% if current_user && current_user.id == comment.user_id %>
							<td><%= link_to 'Delete Comment', [comment.point_of_interest, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
					<% end %>
			    </tr>
	    <% end %>
	  </tbody>
	</table>
<% else %>
	<p>
		Be the first to comment!
	</p>
<% end %>