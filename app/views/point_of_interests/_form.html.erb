<%= form_for @poi do |f| %>
	<head>
    	<link href="js-image-slider.css" rel="stylesheet" type="text/css" />
    	<script src="js-image-slider.js" type="text/javascript"></script>
  	</head>
  	<body>
  		<div class ="address">
	  		<p>
	    		<b>Latitude:</b>
	    		<%= f.text_field :latitude %><br>
	    		<b>Longitude:</b>
	    		<%= f.text_field :longitude %>
	    	</p>
	    </div>
		<div class = "summary">
			<h1>Summary - About the POI</h1>
				<%= f.text_area :summary %>
		</div>
		
		<div class = "sponsor">
			<h1>Sponsor Information</h1>			
    		<%= f.text_area :sponsor_info %>
		</div>
		
		<div class = "artist">
			<h1>Artist</h1>
    		<%= f.text_area :artist_info %>
		</div>
		
		<div class = "pictures">
			<h1>Pictures - UNDERCONSTRUCTION</p>
				<%= f.file_field :photo %>
		</div>
	</body>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>