<!DOCTYPE html>
<html>
	<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
	<head>
		<meta charset="UTF-8">
		<%= stylesheet_link_tag "point_app" %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  		<%= csrf_meta_tags %>
		
		<title>POINT</title>
	</head>
	
	<div class = "wrapper_all">
		
		<header>
			<div class = "logo">
				<%= link_to( image_tag("POINT-Logo-1.jpg"), "/") %>
			</div>
			
			<nav>
				<ul>
				    <li><%= link_to "Rules", controller: "main", action: "rules"%></li>
				    <li><%= link_to "Contact Us", controller: "contact_us_messages", action: "new" %></li>
				    <li><%= link_to "Login", controller: "main", action: "underconstruction" %></li>
				</ul>
				
			</nav><!-- closes nav -->
			
		</header><!-- closes header -->
		
		<div class="body">
			
			<%= yield %>
			
		</div><!-- closes body -->
	
	</div><!-- closes wrapper_all -->
	
	<script type='text/javascript'>
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  			markers = handler.addMarkers([
    			{
      				"lat": 55.85065,
      				"lng": -4.240723,
      				"picture": {
        				"path": "google.maps.SymbolPath.CIRCLE",
        				"width":  36,
        				"height": 36
      				},
      				"infowindow": '<%= link_to("example", controller: "point_of_interest", action: "example") %>'
    			}
  			]);
  			markers = handler.addMarkers([
    			{
      				"lat": 10.85065,
      				"lng": -1.240723,
      				"picture": {
        				"path": "google.maps.SymbolPath.CIRCLE",
        				"width":  36,
        				"height": 36
      				},
      				"infowindow": '<%= link_to("example", controller: "point_of_interest", action: "example") %>'
    			}
  			]);
  			handler.bounds.extendWith(markers);
  			handler.fitMapToBounds();
		});
	</script>

</html>
